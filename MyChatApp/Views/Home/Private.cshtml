@model IEnumerable<Chat>

@{
    var userId = User.GetUserId();
}

<div class="chat-body">
    @foreach (var chat in Model)
    {
        <a class="btn btn-info" style="margin: 20px 70px 20px 70px;"  asp-controller="Home" asp-action="Chat" asp-route-id="@chat.Id">
            @chat.Users.FirstOrDefault(x => x.UserId != userId).User.UserName
        </a>
    }
</div>
