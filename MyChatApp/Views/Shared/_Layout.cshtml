
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ChatApp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">



</head>

<body>

    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid justify-content-start">
            <a class="navbar-brand text-light" href="#">Messenger</a>
            <a class="btn btn-sm btn-outline-secondary" style="margin-left:8rem; margin-right: 1rem;" asp-controller="Home" asp-action="Index">Home</a>
            <a class="btn btn-sm btn-outline-secondary" style="margin-right: 1rem;" asp-controller="Home" asp-action="Find">Find</a>
            <a class="btn btn-sm btn-outline-secondary" style="margin-right: 1rem;" asp-controller="Home" asp-action="Private">Private</a>
        </div>
        
    </nav>

    <div class="main">
        @if (User.Identity.IsAuthenticated)
        {
            @* <vc:room></vc:room> *@
            @if (User.Identity.IsAuthenticated)
            {
                @await Component.InvokeAsync("Room")
            }
        }
        <div class="chat">
            @RenderBody()
        </div>
    </div>

    <div class="modal" id="create-room-modal">
        <form asp-controller="Home" asp-action="CreateRoom" class="modal-body bg-info">
            <button type="button" class="close" onclick="closeModal()">X</button>
            <header>Create Room</header>
            <div>
                <input name="name">
            </div>
            <footer>
                <button class="btn btn-dark">Create</button>
            </footer>
        </form>
    </div>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", false)

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</html>
