@model IEnumerable<Chat>


<div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 240px;">
    <ul class="nav nav-pills flex-column mb-auto">
        @foreach (var chat in Model)
        {
            <hr />
            <li>
                <a class="nav-link text-white" asp-controller="Home" asp-action="Chat" asp-route-id="@chat.Id">
                    @chat.Name
                </a>
            </li>
            <hr />
        }
        <li class="nav-item">
            <a class="nav-link text-white" aria-current="page" id="create-room-btn" href="#">
            <strong>Add room</strong>
        </a>
        </li>
    </ul>
    <hr />
    <div class="dropdown">
        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <strong>@ViewBag.userName</strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
            <li><a class="dropdown-item" href="#">Sign out</a></li>
        </ul>
    </div>
</div>
